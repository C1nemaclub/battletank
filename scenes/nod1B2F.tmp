script/source = "extends Node

@onready var gun = $Hull/Gun;
@onready var gun_marker = $Hull/Gun/Marker2D
@export var BULLET: PackedScene; 
@onready var hull = $Hull
@onready var progress_bar = $ProgressBar

const FIRE_RATE = 0.5;
const MOVE_SPEED = 1.5;
const BULLET_SPEED = 2000;
var can_fire = true;

# Called when the node enters the scene tree for the first time.
func _ready():
	pass # Replace with function body.


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	var mousePosition = gun.get_global_mouse_position();
	gun.look_at(mousePosition)
	gun.rotation_degrees += 90


	if Input.is_action_pressed(\"fire\") and can_fire:
		shoot(delta);
		
	if Input.is_action_pressed(\"up\"):
		hull.position += Vector2(0,-1).rotated(hull.rotation) * MOVE_SPEED;
	if Input.is_action_pressed(\"down\"):
		hull.position += Vector2(0,1).rotated(hull.rotation) * MOVE_SPEED;
	if Input.is_action_pressed(\"right\"):
		hull.rotation_degrees += 1;
	if Input.is_action_pressed(\"left\"):
		hull.rotation_degrees -= 1;
	
		

func shoot(delta):
		var bullet = BULLET.instantiate();
		
		bullet.position += gun_marker.get_global_position()
		bullet.rotation_degrees += gun.rotation_degrees + hull.rotation_degrees;
		
		var shoot_direction = (Vector2(0,1)
			.rotated(gun.rotation + hull.rotation) * BULLET_SPEED) * -1
		
		bullet.apply_impulse(shoot_direction, Vector2.ZERO)
		get_tree().get_root().add_child(bullet);
		
		progress_bar.set_value_no_signal(0);
		can_fire = false;
		await get_tree().create_timer(FIRE_RATE).timeout;
		#progress_bar.set_value_no_signal(0);
		progress_bar.play_animation()
		
		
	hull.position += -direction * 1 * get_process_delta_time();

func _on_progress_bar_animation_done():
	can_fire = true
"

